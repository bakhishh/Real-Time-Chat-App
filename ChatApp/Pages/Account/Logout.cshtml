@page
@model ChatApp.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logging Out";
}

<div class="container mt-5 text-center">
    <div class="card shadow p-4 mx-auto" style="max-width: 400px;">
        <h1 class="text-danger">Sign Out</h1>
        <p class="text-muted">Are you sure you want to log out?</p>
        
        <form method="post">
            @Html.AntiForgeryToken() 
            <button type="submit" class="btn btn-danger w-100 mt-3">Confirm Logout</button>
        </form>
    </div>
</div>