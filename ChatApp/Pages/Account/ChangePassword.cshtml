@page
@model ChatApp.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h5 class="mb-0"><i class="fas fa-key mr-2"></i> Change Password</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label class="small font-weight-bold">Current Password</label>
                            <input asp-for="Input.CurrentPassword" class="form-control" placeholder="******" />
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="small font-weight-bold">New Password</label>
                            <input asp-for="Input.NewPassword" class="form-control" placeholder="******" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold">New Password (Again)</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="******" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block shadow-sm">
                            Update Password
                        </button>
                        <a href="javascript:history.back()" class="btn btn-link btn-block btn-sm text-muted">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>