@page
@model ChatApp.Pages.Admin.AddUserModel
@{
    ViewData["Title"] = "Add New User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="mb-0">Add New User</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="font-weight-bold">First Name</label>
                                <input asp-for="Input.FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="font-weight-bold">Last Name</label>
                                <input asp-for="Input.LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="font-weight-bold">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                <input asp-for="Input.Username" class="form-control" placeholder="username" />
                            </div>
                            <span asp-validation-for="Input.Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="font-weight-bold">Password</label>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="font-weight-bold">System Role</label>
                            <select asp-for="Input.Role" class="form-control">
                                <option value="User">Standard User</option>
                                <option value="Admin">Administrator</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./AdminPageModel" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-user-plus"></i> Save User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}